// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email String @id @db.VarChar(100)
  password String @db.VarChar(100)
  name String @db.VarChar(100)
  token String? @db.VarChar(100)
  feeders Feeder[]

  @@map("users")
}

model Article {
  article_id Int @id @default(autoincrement())
  title String @db.VarChar(100)
  tag String @db.VarChar(50)
  content String? @db.VarChar(300)
  author_name String? @db.VarChar(100)
  photo_url String? @db.VarChar(300)

  @@map("articles")
}

model Feeder {
  id String @id @db.VarChar(100)
  name String @db.VarChar(100)
  email String @db.VarChar(100)
  user User @relation(fields: [email], references: [email])
  schedule Schedule[]
  history History[]
  temperature Temperature[]

  @@map("feeders")
}

model Schedule {
  id Int @id @default(autoincrement())
  hour Int @db.Int()
  minute Int @db.Int()
  portion Int @db.Int()
  is_active Boolean 
  feeder_id String @db.VarChar(100)
  feeder Feeder @relation(fields: [feeder_id], references: [id])

  @@map("schedules")
}

model History {
  id Int @id @default(autoincrement())
  date_time String @db.VarChar(100)
  hour Int @db.Int() @default(10)
  minute Int @db.Int() @default(23)
  portion Int @db.Int()
  feeder_id String
  feeder Feeder @relation(fields: [feeder_id], references: [id])

  @@map("history")
}

model Temperature {
  id Int @id @default(autoincrement())
  temperature Int @db.Int()
  feeder_id String
  feeder Feeder @relation(fields: [feeder_id], references: [id])

  @@map("temperatures")
}